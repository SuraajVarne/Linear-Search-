/* So basically return 1 or 0 kills the program. That is the reason cout << "Not found" is not getting printed on terminal. if you remove return 1 then
it will get printed on the screen as well (line 21). 
*/ 

#include <iostream> 
#include <string>

using namespace std; 

int main()
{
    int numbers[] = {24,3,6,4455,22,1};
    
    for(int i=0;i<6;i++)
    {
        if(numbers[i]==3)
        {
            cout << "Number found\n";
            return 1;
        }
    }
    cout << "Not found\n";
    return 0;
    
}
